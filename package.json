{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "lgtm-chrome-extension",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "check": "tsc",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "all": "pnpm build && pnpm check && pnpm lint:fix && pnpm coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@crxjs/vite-plugin": "2.3.0",
    "@types/chrome": "0.1.32",
    "@types/node": "25.0.5",
    "@vitest/coverage-v8": "4.0.16",
    "jsdom": "27.4.0",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-zip-pack": "1.2.4",
    "vitest": "4.0.16"
  },
  "packageManager": "pnpm@10.28.0",
  "volta": {
    "node": "24.13.0"
  }
}
